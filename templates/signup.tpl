<form method="post" action="signup">
  <table class="signup">
    <tbody>
      <tr><td><small>Email:</small></td></tr>
      <tr><td><input class="signup_email" name="email"></td></tr>
      <tr><td><small>Username:</small></td></tr>
      <tr><td><input class="login_input" name="username" value="{$username}"></td></tr>
      <tr><td><small>Password:</small></td></tr>
      <tr><td><input class="login_input" type="password" name="password"></td></tr>
      <tr><td><input class="login_input" type="submit" name="Login" value="Login"></td></tr>
    </tbody>
  </table>
</form>
